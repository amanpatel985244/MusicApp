<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Profile</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @media (min-width: 640px) {
      .mobile-nav {
        display: none;
      }
    }
  </style>
</head>
<body class="bg-black text-white min-h-screen pb-24">

  <!-- üîπ Header -->
  <header class="flex flex-col sm:flex-row justify-between items-center gap-3 sm:gap-6 px-4 sm:px-6 md:px-10 pt-6 pb-4">
    <!-- Playlist Title with Icon -->
    <div class="flex items-center gap-3">
   
      <h1 class="text-2xl font-bold">Edit Profile</h1>
    </div>

    <!-- User Info -->
    <div class="flex items-center gap-3 sm:ml-auto">
      <img src="<%= updateuser.image || 'https://via.placeholder.com/40' %>" alt="Profile"
           class="w-10 h-10 sm:w-12 sm:h-12 rounded-full object-cover border-2 border-white" />
      <div class="text-sm sm:text-base">
        <p class="font-semibold"><%= updateuser.name %></p>
        <span class="text-xs sm:text-sm text-gray-400">Editing Account</span>
      </div>
      
      <!-- ‚úÖ Hide logout on mobile -->
      <a href="/logout"
         class="hidden sm:inline-block ml-2 text-xs sm:text-sm text-red-500 hover:underline font-medium transition duration-200">
        Logout
      </a>
    </div>
  </header>
  <hr class="border-white/20 mb-6 mx-4 sm:mx-6 md:mx-10">

  <!-- üîß Edit Form -->
  <div class="bg-zinc-900 p-6 sm:p-8 rounded-lg shadow-lg w-full max-w-lg mx-auto">

    <h1 class="text-xl sm:text-2xl font-bold mb-6 text-center">üõ†Ô∏è Update Your Info</h1>

    <form action="/update" method="POST" class="space-y-4">
      <input type="hidden" name="id" value="<%= updateuser._id %>">

      <!-- Name -->
      <div>
        <label class="block mb-1 text-sm font-medium">Name</label>
        <input type="text" name="name" value="<%= updateuser.name %>" required
               class="w-full px-3 py-2 rounded bg-zinc-800 text-white border border-zinc-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>

      <!-- Email -->
      <div>
        <label class="block mb-1 text-sm font-medium">Email</label>
        <input type="email" name="email" value="<%= updateuser.email %>" required
               class="w-full px-3 py-2 rounded bg-zinc-800 text-white border border-zinc-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>

      <!-- Profile Image -->
      <div>
        <label class="block mb-1 text-sm font-medium">Profile Image URL</label>
        <input type="text" name="imageUrl" value="<%= updateuser.image %>" required
               class="w-full px-3 py-2 rounded bg-zinc-800 text-white border border-zinc-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>

      <!-- Password -->
      <div>
        <label class="block mb-1 text-sm font-medium">New Password (optional)</label>
        <input type="password" name="password"
               placeholder="Enter new password (leave blank to keep current)"
               class="w-full px-3 py-2 rounded bg-zinc-800 text-white border border-zinc-700 focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>

      <!-- Submit -->
      <button type="submit"
              class="w-full bg-green-600 hover:bg-green-700 transition py-2 rounded text-white font-semibold">
        üíæ Save Changes
      </button>
    </form>

    <div class="text-center mt-6">
      <a href="/playlists" class="text-blue-400 hover:underline">‚Üê Back to Playlists</a>
    </div>
  </div>

  <!-- ‚úÖ Bottom Navigation for Mobile -->
  <nav class="mobile-nav fixed bottom-0 left-0 w-full bg-black/90 text-white border-t border-white/10 backdrop-blur-md z-50">
    <div class="flex justify-around items-center py-2 text-xs">

      <!-- Home / Playlists -->
      <a href="/playlists" class="flex flex-col items-center hover:text-blue-400 transition">
        <svg class="w-6 h-6 mb-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 2L2 8h2v8h4v-5h4v5h4V8h2L10 2z"/>
        </svg>
        <span>Playlists</span>
      </a>

      <!-- Create Playlist -->
      <a href="/playlist/new" class="flex flex-col items-center hover:text-blue-400 transition">
        <svg class="w-6 h-6 mb-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z"/>
        </svg>
        <span>Create</span>
      </a>

      <!-- Profile -->
      <a href="/edit" class="flex flex-col items-center hover:text-blue-400 transition">
        <svg class="w-6 h-6 mb-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 2a5 5 0 100 10 5 5 0 000-10zM2 18a8 8 0 0116 0H2z"/>
        </svg>
        <span>Profile</span>
      </a>

      <!-- Logout -->
      <a href="/logout" class="flex flex-col items-center text-red-500 hover:text-red-400 transition">
        <svg class="w-6 h-6 mb-1" fill="currentColor" viewBox="0 0 20 20">
          <path d="M3 4a1 1 0 011-1h6a1 1 0 110 2H5v10h5a1 1 0 110 2H4a1 1 0 01-1-1V4zm11.293 3.707a1 1 0 010 1.414L12.414 11H17a1 1 0 110 2h-4.586l1.879 1.879a1 1 0 01-1.414 1.414l-3.586-3.586a1 1 0 010-1.414l3.586-3.586a1 1 0 011.414 0z"/>
        </svg>
        <span>Logout</span>
      </a>
    </div>
  </nav>

</body>
</html>
